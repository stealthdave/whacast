[Unit]
Description=Whole House Audio Chromecast Amplifier
After=multi-user.target

[Service]
WorkingDirectory=/opt/whacast/src
ExecStart=/opt/whacast/castenv/bin/python -m whacast whacast.json
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=3

[Install]
Alias=whacast.service
